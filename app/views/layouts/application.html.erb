<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <script src="https://kit.fontawesome.com/a36c0b29c4.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">Bookers</a>
            <button class="navbar-toggler" type="button" date-toggle="collapse" date-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navugation">
              <span class="navbar-toggler-icon"></span>
            </button>
           <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <% if user_signed_in? %>
             <ul class="navbar-nav ml-auto">
               <li>
                 <%= link_to user_path(current_user.id), class: 'nav-link text-light' do %>
                 <i class="fas fa-home" aria-hidden="true"></i>
                 Home
                 <% end %>
               </li>
               <li>
                 <%= link_to users_path, class: 'nav-link text-light' do %>
                 <i class="fa-solid fa-users"></i>
                 Users
                 <% end %>
               </li>
               <li>
                 <%= link_to books_path, class: 'nav-link text-light' do %>
                 <i class="fa-solid fa-book-open"></i>
                 Books
                 <% end %>
               </li>
               <li>
                 <%= link_to destroy_user_session_path, class: 'nav-link text-light' do %>
                 <i class="fa-solid fa-right-from-bracket"></i>
                 Log out
                 <% end %>
               </li>
             </ul>
            <% else %>
              <ul class="navbar-nav ml-auto">
               <li>
                 <%= link_to root_path, class: 'nav-link text-light' do %>
                 <i class="fas fa-home" aria-hidden="true"></i>
                 Home
                 <% end %>
               </li>
               <li>
                 <%= link_to about_path, class: 'nav-link text-light' do %>
                 <i class="fa-solid fa-link"></i>
                 About
                 <% end %>
               </li>
               <li>
                 <%= link_to new_user_registration_path, class: 'nav-link text-light' do %>
                 <i class="fa-solid fa-user-plus"></i>
                 Sign up
                 <% end %>
               </li>
               <li>
                 <%= link_to new_user_session_path, class: 'nav-link text-light' do %>
                 <i class="fa-solid fa-right-to-bracket"></i>
                 Log in
                 <% end %>
               </li>
              </ul>
            <% end %>
           </div>
      </div>
     </nav>
    </header>
   <main>
    <%= yield %>
   </main>
   <footer>
     <div class="contaner mt-5">
       <div class="row">
         <div class="mx-auto">
           <p>CopyRight Infratop.inc</p>
         </div>
       </div>
     </div>
   </footer>
  </body>
</html>
