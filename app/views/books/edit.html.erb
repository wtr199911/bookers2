<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Book</h2>

      <%= render 'users/errors', user: @book %>

      <%= form_with model: @book,url: book_path(@book.id), method: :patch do |f| %>

      <div class="group" style="margin-bottom: 1rem;">
        <label for="inputName">Title</label>
        <%= f.text_field :title, autofocus: true, id:"inputName", placeholder:"名前", class: "form-control" %>
      </div>

      <div class="group" style="margin-bottom: 1rem;">
        <label for="inputImage">Oponion</label>
        <%= f.text_area :body, class: "form-control" %>
      </div>
      <div class="group" style="margin-bottom: 1rem;">
        <%= f.submit "Update Book", class: "btn btn-success" %>
      <% end %>
      </div>
      <%= link_to "Show", book_path(@book.id) %>
      |
      <%= link_to "Back", books_path %>
    </div>d
  </div>
</div>