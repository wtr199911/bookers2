<%= render 'books/list', books: @book,user: @book_info %>

<h1><strong>Books</strong></h1>

<table>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

 <tbody>

  <% @books.each do |book| %>
  <tr>
   <td>
    <span><%= image_tag 'no-image.jpg' %></span>
   </td>

   <td>
    <%= link_to book_path(book.id) do %>
    <span><%= book.title %></span>
    <% end %>
   </td>

   <td>
    <span><%= book.body %></span>
   </td>

  <% end %>

 </tbody>

</table>
