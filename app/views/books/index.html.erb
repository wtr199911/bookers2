<p></p>
<div class="container px-5 px-sm-0">

 <%= render 'users/errors', user: @book %>

 <div class="row">
   <%= render 'list', book: @book,user: @user_info %>
   <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
      <table class="table">
       <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

       <tbody>
        <% @books.each do |book| %>
         <tr>
           <td>
            <span>
             <%= link_to book_path(book.id) do %>
               <%= image_tag @user_info.get_profile_image(80,80) %>
             <% end %>
            </span>
           </td>

           <td>
            <span>
             <%= link_to book_path(book.id) do %>
              <%= book.title %>
             <% end %>
            </span>
           </td>

           <td>
            <span>
              <%= book.body %>
            </span>
           </td>

        <% end %>
       </tbody>
      </table>
   </div>
 </div>
</div>
