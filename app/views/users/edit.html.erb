<p></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>

      <%= render 'errors', user: @user %>

      <%= form_with model: @user do |f| %>

      <div class="group" style="margin-bottom: 1rem;">
        <label for="inputName">Name</label>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class: "form-control" %>
      </div>

      <div class="group" style="margin-bottom: 1rem;">
        <label for="inputImage">image</label>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class: "form-control-file" %>
      </div>

      <div class="group" style="margin-bottom: 1rem;">
        <label for="inputImage">introduction</label>
        <%= f.text_area :introduction, class: "form-control" %>
      </div>
      <div class="group" style="margin-bottom: 1rem;">
        <%= f.submit "Update User", class: "btn btn-secondary" %>
      <% end %>
      </div>
    </div>
  </div>
</div>




