<div class="container px-5 px-sm-0">
  <div class="row">
   <%= render 'books/list', book: @book,user: @user %>
   <div class="col-md-8 offset-md-1" style="margin-top: 15px;">
     <h2>Books</h2>

       <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

       <% @books.each do |book| %>
       <tbody>
         <tr>
          <th>
          <%= image_tag 'no-image.jpg' %>
          </th>
          <th>
          <%= link_to book_path(book.id) do %>
          <%= book.title %>
          <% end %>
          </th>
          <th>
          <%= book.body %>
          </th>
         </tr>
       </tbody>
       <% end %>
      </table>
     </div>
  </div>
</div>
