<%= render 'books/list', books: @user,user: @user_info %>

<h1><strong>Books</strong></h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>title</th>
      <th>opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <% @books.each do |book| %>
  <tbody>
    <tr>
      <th>
        <%= image_tag 'no-image.jpg' %>
      </th>
      <th>
        <%= link_to book_path(book.id) do %>
          <%= book.title %>
        <% end %>
      </th>
      <th>
        <%= book.body %>
      </th>
    </tr>
  </tbody>
  <% end %>
</table>

