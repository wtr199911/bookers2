<div class="container px-5 px-sm-0">
 <div class="row">
   <%= render 'books/list', book: @book,user: @user_info %>
   <div class="col-md-8 offset-md-1">
    <h2>Users</h2>
      <table class="table">
       <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
       </thead>

       <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
            <span><%= image_tag 'no-image.jpg' %></span>
            </td>

            <td>
            <span><%= user.name %></span>
            </td>

            <td>
            <span><%= link_to 'Show', user_path(user.id) %></span>
            </td>
        <% end %>
       </tbody>
      </table>
   </div>
 </div>
</div>

